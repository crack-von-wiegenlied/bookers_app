<h1>Editing Book</h1>

<%= form_with model: @book do |f| %>
<label>Title</label>
<div class="field">
  <%= f.text_field :title %>
</div>
<label>Body</label>
<div class="field">
  <%= f.text_area :body %>
</div>
<div class="actions">
<%= f.submit 'Update Book' %>
<% end %>
</div>
<%= link_to 'Show', book_path(@book.id) %><%= " |" %> <%= link_to 'Back', books_path %>